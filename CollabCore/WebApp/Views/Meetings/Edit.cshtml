@model WebApp.ViewModels.MeetingViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Meeting</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Meeting.Name" class="control-label"></label>
                <input asp-for="Meeting.Name" class="form-control" />
                <span asp-validation-for="Meeting.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Meeting.IsMandatory" /> @Html.DisplayNameFor(model => model.Meeting.IsMandatory)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.StartDate" class="control-label"></label>
                <input asp-for="Meeting.StartDate" class="form-control" />
                <span asp-validation-for="Meeting.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.Link" class="control-label"></label>
                <input asp-for="Meeting.Link" class="form-control" />
                <span asp-validation-for="Meeting.Link" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Meeting.TeamId" class="control-label"></label>
                <select asp-for="Meeting.TeamId" class="form-control" asp-items="Model.TeamSelectList"></select>
                <span asp-validation-for="Meeting.TeamId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Meeting.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
