@model WebApp.ViewModels.UserInTeamViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Base.Resources.Common.Edit</h1>

<h4>@App.Resources.Domain.UserInTeam._UserInTeam</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserInTeam.TeamRole" class="control-label"></label>
                <input asp-for="UserInTeam.TeamRole" class="form-control" />
                <span asp-validation-for="UserInTeam.TeamRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInTeam.Since" class="control-label"></label>
                <input asp-for="UserInTeam.Since" class="form-control" />
                <span asp-validation-for="UserInTeam.Since" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInTeam.Until" class="control-label"></label>
                <input asp-for="UserInTeam.Until" class="form-control" />
                <span asp-validation-for="UserInTeam.Until" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInTeam.UserId" class="control-label">@Html.DisplayNameFor(model => model.UserInTeam.User)</label>
                <select asp-for="UserInTeam.UserId" class="form-control" asp-items="Model.UsersSelectList"></select>
                <span asp-validation-for="UserInTeam.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInTeam.TeamId" class="control-label">@Html.DisplayNameFor(model => model.UserInTeam.Team)</label>
                <select asp-for="UserInTeam.TeamId" class="form-control" asp-items="Model.TeamSelectList"></select>
                <span asp-validation-for="UserInTeam.TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserInTeam.TeamRoleId" class="control-label">@Html.DisplayNameFor(model => model.UserInTeam.TeamRole)</label>
                <select asp-for="UserInTeam.TeamRoleId" class="form-control" asp-items="Model.TeamRoleSelectList"></select>
                <span asp-validation-for="UserInTeam.TeamRoleId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="UserInTeam.Id" />
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Common.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Base.Resources.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
