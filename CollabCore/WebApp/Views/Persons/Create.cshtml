@model WebApp.ViewModels.PersonViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@Base.Resources.Common.Create</h1>

<h4>@App.Resources.Domain.Person._Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Person.PersonName" class="control-label">@App.Resources.Domain.Person.Name</label>
                <input asp-for="Person.PersonName" class="form-control" />
                <span asp-validation-for="Person.PersonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Id" class="control-label">@Base.Resources.Common.User</label>
                <select asp-for="Person.Id" asp-items="Model.UsersSelectList" class="form-control">
                </select>
                <span asp-validation-for="Person.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Base.Resources.Common.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Base.Resources.Common.BackToList</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
