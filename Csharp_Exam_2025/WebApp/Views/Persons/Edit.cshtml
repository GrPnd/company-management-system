@model WebApp.Models.PersonViewModel

@{
ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Person.PersonName" class="control-label"></label>
                <input asp-for="Person.PersonName" class="form-control" />
                <span asp-validation-for="Person.PersonName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.Id" class="control-label"></label>
                <select asp-for="Person.Id" class="form-control" asp-items="Model.UsersSelectList"></select>
                <span asp-validation-for="Person.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
